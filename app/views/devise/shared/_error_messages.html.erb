<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul class="ul-error">
    <% @user.errors.full_messages.each do |msg| %>
      <li class="li-error"><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
